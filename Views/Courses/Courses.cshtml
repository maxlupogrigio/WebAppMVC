


@{
    ViewData["Title"] = "Catalogo dei Corsi on-line";
  }

 @Model List<CourseViewModel>





<section>
<h1>@ViewData["Title"]</h1>
<h2 class="course h2"><em>Corsi disponibili sulla piattaforma: clicca dettaglio per visualizzare tutte le informazioni</em></h2>
<div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-5"><order-link order-by="Title" Input="@Model.Input">Titolo</order-link></div>
    <div class="col-md-2"><order-link order-by="Rating" Input="@Model.Input">Valutazione</order-link></div>
    <div class="col-md-2"><order-link order-by="CurrentPrice" Input="@Model.Input">Prezzo</order-link></div>
    <div class="col-md-2"></div>
</div>

@foreach(CourseViewModel course in Model)
{
  <hr>
 
  <div class="row course">
    <div class="col-md-1">
      <img src=@("/imgcourses/" + @i + ".jpg") width="52" height="52">
    </div>
    <div class="col-md-5">
      <h2>Titolo del corso</h2>
    <author>Nome dell'autore</author>
    </div>
    <div class="col-md-2 rating">
      <i class="fas fa-star"></i>
      <i class="fas fa-star"></i>
      <i class="fas fa-star"></i>
      <i class="fas fa-star"></i>
      <i class="fas fa-star"></i>
    </div>
    <div class="col-md-2 price">
      EUR 10,99 <br/> <s>EUR 15,00</s>

    </div>
    <div class="col-md-2 d-flex align-item-center">
      <a class="btn btn-primary" asp-action="Detail" asp-route-id="5">Dettaglio</a>
       
    </div>
   
</div>
}
